    <% if incident.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true" >x</button>
      <ul>
      <% incident.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="col-xs-6">
    <div class="widget-box">
      <div class="widget-header">
        <h4 class="widget-title"></h4>
      </div>

      <div class="widget-body">
        <div class="widget-main no-padding">
          <%= form_for(incident) do |f| %>
            <!-- <legend>Form</legend> -->
            <fieldset class="col-xs-12">

              
                <label class="col-xs-12" ><%= f.label :description %></label>
                <%= f.text_field :description %>

                <br>
                <br>

                <label class="col-xs-12"><%= f.label :client_event_id %></label>
                <%= f.text_field :client_event_id %>

                <br>
                <br>
              
            </fieldset>

            <div class="form-actions center">
              <button class="btn btn-danger" type="button" onclick="location.href='/incidents'">
                  <i class="ace-icon fa fa-undo bigger-110"></i>Cancel
              </button>
              <input type="submit" name="commit" value="Confirm" class="btn btn-info">
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>